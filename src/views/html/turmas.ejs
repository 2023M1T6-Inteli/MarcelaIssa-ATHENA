<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suas Turmas</title>
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="stylesheet" href="../css/turmas.css">
    <link rel="stylesheet" href="../css/cabecalho.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="../js/cabecalho.js"></script>
</head>
<body>
    <%- include('cabecalho') %>
    <main>
        <h1 class="suas_turmas">Suas Turmas</h1> 
        <div class="filtro">
            <input class="filtro_botao" type="checkbox" id="filtro">
            <label for="filtro" class="filtro_header">Filtrar por matéria <img class="filtro_imagem" src="../assets/icone_filtro.png" alt="Ícone de filtro"></label>
            <div class="filtro_lista">
                <% for (let profDisciplina of profDisciplinas) { %>
                <div class="filtro_lista_checkbox">
                    <input class="checkbox" type="checkbox" id="<%= profDisciplina.nome %>">
                    <label class="label" for="<%= profDisciplina.nome%>"><%= profDisciplina.nome %></label>
                </div>
                <% } %>
            </div>
        </div>

        <div class="materias">
            <% for (let i = 0; i < turmas.length; i++) { %>
            <div class="materia">
                <img class="materia_imagem" src="../assets/bg_plano_de_aula.png" alt="Ícone plano de aula">
                <div class="materia_divisao">
                    <h3 class="materia_titulo">[<%= disciplinas[i].nome %>] <%= turmas[i].nome %></h3>
                    <p class="materia_conteudo">Média Geral: XX</p>
                    <p class="materia_conteudo">Defasagem Média: XX</p>
                    <a class="materia_link" href="/turmas?idTurma=<%= turmas[i].id_turma %>">Ver turma</a>
                </div>
            </div>
            <% } %>
        </div>

        <!-- <p class="grafico">Gráfico da Média</p>
        <button class="botao_primario">Detalhar</button>
        <p class="grafico">Gráfico da Defasagem</p>
        <button class="botao_primario">Detalhar</button> -->
        
        <div class="teste">
            <button class="cadastrar_nova_turma">Cadastrar nova turma</button>
        </div>
    </main>
</body>
</html>